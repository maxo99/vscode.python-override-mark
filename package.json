{
  "name": "python-override-mark",
  "displayName": "Python Override Mark",
  "publisher": "maxo99",
  "description": "Visual and interactive indicators for overridden methods in Python.",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/python-override-mark.git"
  },
  "icon": "assets/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Python Override Mark",
      "properties": {
        "pythonOverrideMark.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before updating marks after typing."
        },
        "pythonOverrideMark.maxInheritanceDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth to search for parent classes (recursive inheritance). Set to 0 for unlimited (use with caution)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "release": "release-it",
    "package": "vsce package",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "release-it": "^19.0.6",
    "typescript": "^5.1.3"
  }
}